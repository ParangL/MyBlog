<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width initial-scale=1.0" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Panel" asp-action="Edit">Add post</a>
        <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
        <a asp-controller="Home" asp-action="Search">Search</a>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Auth" asp-action="Logout">Log out</a>
        }

        else
        {
            <a asp-controller="Auth" asp-action="Login">Login</a>
        }
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
